<% wrapper_bgcolor = "#FEFDFD" %>

body {
    background-color: #AAA;
    font-family: 'VL PGothic';
    font-size: 13px;
}

#wrapper {
    overflow: hidden;
    margin: 10px auto;
    margin-top: 20px;
    background-color: <%= wrapper_bgcolor %>;
}

#header {
    float: left;
    text-align: center;
}

#header p {
    font-size: 12px;
}

#logo {
    margin: 0 auto;
    margin-bottom: 10px;
    border: 2px solid #000;
}

#container {
    float: right;
}

h1 {
    background-color:#000;
    color: #fff;
    margin-bottom: 6px;
}

h2 {
}

h1, h2, h3, h4 {
    font-weight: bold;
    text-align: center;
}

.bg {
    background-color: transparent;
}

.row {
    overflow: hidden;
    clear: both;
}

.row p {
    padding: 4px;
}

.column {
    overflow: hidden;
    float: left;
}

.article {
/*    border-bottom: 1px solid #DDD;*/
    overflow: hidden;
}

.subh {
    text-align: center;
    font-size: 2em;
    font-weight: bold;
    margin-bottom: 6px;
}

.article p {
    padding: 2px;
    float: left;
}
.article .img {
    float: right;
}

.lv2 h2 {
    min-height: 18px;
}

.lv3 h2 {
    border: 1px solid #CCC;
    background-color: #FCFCFC;
/*    min-height: 16px;*/
}

.lv1 p {
    font-size: 18px;
}
.lv2 p {
    font-size: 16px;
}
.lv3 p {
    font-size: 13px;
}

.up {
    color: #0A0;
}
.down {
    color: #B00;
}
h2.down {
    color: #B00;
}